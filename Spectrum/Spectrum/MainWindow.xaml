<Window x:Class="Spectrum.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:spectrum="clr-namespace:Spectrum"
        Title="Spectrum2RGB" Height="600" Width="900">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="700"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <DockPanel Grid.Column="0">
            <Border Width="680" Height="540" BorderBrush="Black" BorderThickness="1">
                <spectrum:SpectrumPlot></spectrum:SpectrumPlot>
            </Border>
        </DockPanel>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <ComboBox Grid.Row="0" Height="40"></ComboBox>
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                </Grid.RowDefinitions>
                <TextBlock Height="40" Text="Selected color" TextAlignment="Center" FontSize="25"></TextBlock>
                <Canvas Grid.Row="1" Height="100" Width="100" Background="Black"></Canvas>
            </Grid>
        </Grid>
    </Grid>
</Window>
